<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <%= stylesheet_link_tag 'animations' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <meta name="keywords" content="<%= @seo_keywords %>" />
    <%= favicon_link_tag 'favicons/favicon.ico' %>
    <link href="https://fonts.googleapis.com/css?family=Rajdhani" rel="stylesheet">
    <%= stylesheet_link_tag    'portfolios', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>   

    <!-- start of navigation -->
    <%= render "shared/portfolio_nav" %>
    <!-- end of navigation -->

    <div class="col-md-12">

        <div class="cover-container">

    <!-- start of masthead -->
    <%= render "shared/porfolio_masthead" %> <!--unless logged_in?(:site_admin)-->
    <!-- end of masthead -->

    <%= yield %>

    <!-- start of footer -->
    <%= render "shared/portfolio_footer" %>
    <!-- end of footer -->

    <%= source_helper("application") %>
    
        </div>
    </div>

  </body>
</html>