<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="keywords" content="<%= @seo_keywords %>" />
    <%= favicon_link_tag 'favicons/favicon.ico' %>
    <!--https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css-->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="site-wrapper">
      <div class="site-wrapper-inner">
        <div class="cover-container">

          <!--<div id="background">-->
          
          <!--</div>-->
          <!--HardDrivePhotojpeg-->
          <%= video_tag(
              'BW-Scroll.mp4',
              id: 'background',
              autoplay: true,
              loop: true,
              muted: true,
              poster: 'max.jpg'
            )
            %>

          <%= render "shared/application_nav"%>
          <!--Yield INJECTS code from other files/templates, such as edit.html.erb on blogs or portfolios, or home.html.erb, or any other template! Dope ASF!-->
          <%= yield %>
          <%= render "shared/application_footer"%>
          
          <%= alerts %>

          <%= source_helper("application") %>
          </div>
        </div>
      </div>
  </body>
</html>
